{% extends "TRIPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block triplatform_body %}
    <h2>Liste des annonces</h2>

    <ul class="list-group list-group-flush">
        {% for advert in listAdverts %}
            <li class="list-group-item">
                <a href="{{ path('tri_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>
{% endblock %}